<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/textbox_vertical_padding"
    android:paddingBottom="@dimen/textbox_vertical_padding"
    android:paddingStart="@dimen/textbox_horizontal_padding"
    android:paddingEnd="@dimen/textbox_horizontal_padding">

    <TextView
        android:id="@+id/info_player_playing"
        android:text="@string/good_game_mess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:textSize="10pt"/>
    <TextView
        android:id="@+id/info_time_player"
        android:layout_below="@+id/info_player_playing"
        android:text="  "
        android:textSize="10pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"/>

</RelativeLayout>